<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/comment_head"
        android:layout_margin="8dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/comment_name"
        android:layout_toRightOf="@+id/comment_head"
        android:layout_alignTop="@+id/comment_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/comment_time"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/comment_name"
        android:layout_alignLeft="@+id/comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/comment_content"
        android:layout_below="@id/comment_head"
        android:layout_alignLeft="@+id/comment_time"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>