<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/green"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/iv_myhead"
            android:src="@drawable/myhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="狗狗社区"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

<ImageView
    android:id="@+id/community_write"
    android:src="@drawable/theme_qupai_default_btn_edit_overlay_text_press"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    </LinearLayout>
<RadioGroup
    android:id="@+id/rg_matter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal">
    <RadioButton
        android:id="@+id/rb_recommend"
        style="@style/community"
        android:checked="true"
        android:text="推荐" />
    <RadioButton
        android:id="@+id/rb_newest"
        style="@style/community"
        android:text="最新" />
</RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>