<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:gravity="center"
        >

        <TextView
            android:text="我的"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
<LinearLayout
    android:id="@+id/ll_login"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@mipmap/share_personal_default"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="请登录"
        android:layout_marginLeft="18dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

 <LinearLayout
     android:background="@color/white"
     android:layout_marginBottom="1dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <TextView
         android:id="@+id/mine_main"
         android:layout_marginLeft="16dp"
         android:drawableLeft="@mipmap/icon_message_family"
         android:drawablePadding="10dp"
         android:text="我的主页"
         android:drawableRight="@drawable/lsq_style_default_arrow_more_right"
         android:gravity="center_vertical"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="wrap_content" />



 </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mine_love"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@mipmap/icon_message_demand"
            android:drawablePadding="10dp"
            android:text="我喜欢的"
            android:drawableRight="@drawable/lsq_style_default_arrow_more_right"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />



    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mine_message"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@mipmap/icon_message_guide"
            android:drawablePadding="10dp"
            android:text="我的消息"
            android:drawableRight="@drawable/lsq_style_default_arrow_more_right"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />



    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mine_circle"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@mipmap/icon_message_interview"
            android:drawablePadding="10dp"
            android:text="我的圈子"
            android:drawableRight="@drawable/lsq_style_default_arrow_more_right"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />



    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mine_setting"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@mipmap/icon_message_integral"
            android:drawablePadding="10dp"
            android:text="我的设置"
            android:drawableRight="@drawable/lsq_style_default_arrow_more_right"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mine_match"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@mipmap/icon_message_order"
            android:drawablePadding="10dp"
            android:text="联系我们"
            android:drawableRight="@drawable/lsq_style_default_arrow_more_right"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />



    </LinearLayout>




</LinearLayout>