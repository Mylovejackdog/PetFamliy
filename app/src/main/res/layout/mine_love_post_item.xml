<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<RelativeLayout
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:layout_margin="8dp"
    android:background="@color/grayBack"
    >
    <ImageView
        android:id="@+id/post_content"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:src="@mipmap/dog"
        android:layout_margin="16dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/post_user_name"
        android:text="小红"
        android:textColor="@color/blue"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/post_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/post_title"
        android:layout_toRightOf="@+id/post_user_name"
        android:layout_alignTop="@+id/post_user_name"
        android:ellipsize="end"
        android:ems="20"
        android:singleLine="true"
        android:layout_marginLeft="4dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
  <LinearLayout
      android:layout_below="@+id/rl"
      android:layout_alignLeft="@+id/rl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/myself_name"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaa"/>
    <TextView
        android:id="@+id/comment_content"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bbb"/>
  </LinearLayout>
</RelativeLayout>